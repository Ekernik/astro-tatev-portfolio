---
import { FaInstagram, FaLinkedin, FaTelegramPlane } from 'react-icons/fa';
import { IoLogoVenmo } from 'react-icons/io5';
import gigSalad from '../assets/gigsalad.png';
import SocialLink from './SocialLink.astro';
---

<ul
  class='w-full flex flex-col gap-4'
  itemscope
  itemtype='http://schema.org/Person'
>
  <SocialLink
    href='https://www.gigsalad.com/tatev_muradyan_professional_violinist_chicago'
    Icon={gigSalad.src}
    title='Book Me'
    alt='Book Tatev on GigSalad.com'
  />

  <SocialLink
    href='https://venmo.com/u/krekern'
    Icon={IoLogoVenmo}
    title='Tip Me'
    alt='Tip Tatev thru Venmo'
  />

  <SocialLink
    href='https://www.instagram.com/tateviolin'
    Icon={FaInstagram}
    title='My Instagram'
    alt="Tatev's Instagram page"
  />

  <SocialLink
    href='https://www.linkedin.com/in/tatev-muradyan-598169318/'
    Icon={FaLinkedin}
    title='Connect with me on LinkedIn'
    alt="Tatev's LinkedIn profile"
  />

  <SocialLink
    href='https://t.me/tmur7'
    Icon={FaTelegramPlane}
    title='Message me on Telegram'
    alt="Tatev's Telegram profile"
  />
</ul>
